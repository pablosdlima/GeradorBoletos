@model WebGeradorBoletos.Models.PessoaMd

<div class="border-bottom p-2 m-1">
    <div class="d-flex justify-content-center">
        <h1 class="h1 font-weight-bold text-info">Aterações de @Model.Nome</h1>
    </div>
    <div class="d-flex justify-content-end">
        <a asp-action="PessoaIndex" asp-controller="Pessoa" class="btn btn-dark p-2">Voltar</a>
    </div>
</div>
<div class="row border box-shadow rounded">
    <div class="w-100">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3 class="font-weight-bold m-2 text-primary">Informações: </h3>
            <div class="form-group d-flex p-2">
                <div class="p-1 col-2">
                    <label asp-for="Id" class="control-label font-weight-bold text-info"></label>
                    <input asp-for="Id" class="form-control" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="p-1 col-10">
                    <label asp-for="Nome" class="control-label font-weight-bold text-info"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex p-2">
                <div class="form-group p-1 col-12 d-flex">
                    <Label class="font-weight-bold m-2 text-secondary">Tipo Pessoa: </Label>
                    <div class="form-check m-2">
                        <input asp-for="TipoPessoa" class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="0">
                        <label class="form-check-label text-info" for="exampleRadios1">
                                Pessoa Fisica
                        </label>
                    </div>
                    <div class="form-check m-2">
                        <input asp-for="TipoPessoa" class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="1">
                        <label class="form-check-label text-info" for="exampleRadios2">
                                Pessoa Juridica
                        </label>
                    </div>
                    <span asp-validation-for="TipoPessoa" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex p-2">
                <div class="form-group p-1 col-6">
                    <label asp-for="Documento" class="control-label font-weight-bold text-info"></label>
                    <input asp-for="Documento" class="form-control" />
                    <span asp-validation-for="Documento" class="text-danger"></span>
                </div>
                <div class="form-group p-1 col-6">
                    <label asp-for="Endereco" class="control-label font-weight-bold text-info"></label>
                    <input asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
            </div>
            <h3 class="font-weight-bold m-2 text-primary">Contato: </h3>
            <div class="d-flex p-2">
                <div class="form-group p-1 col-6">
                    <label asp-for="Telefone" class="control-label font-weight-bold text-info"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="form-group p-1 col-6">
                    <label asp-for="Email" class="control-label font-weight-bold text-info"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group p-3">
                <input type="submit" value="Salvar alterações" class="btn btn-primary btn-lg"/>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}